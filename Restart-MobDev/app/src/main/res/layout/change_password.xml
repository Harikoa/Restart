<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@drawable/mobbg"
    tools:context=".ChangePassword">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingRight="30dp"
                android:text="Change Password"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/journalEntryDate"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:text="Reset Account Password"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="363dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_oldpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Old Password"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_oldpass"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"

                android:ems="10"
                android:inputType="textPersonName"

                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />




            <TextView
                android:id="@+id/tv_newpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="New Password"
                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_newpass"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"

                android:ems="10"
                android:inputType="textPersonName"

                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_reenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Re-enter New Password"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_reenter"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"

                android:ems="10"
                android:inputType="textPersonName"

                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="445dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/moodTrackSubmit"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_btn"
                android:text="Reset Password"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>