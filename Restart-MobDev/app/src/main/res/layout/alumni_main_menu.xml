<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobbg"
    tools:context=".AlumniMainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alumniWelcome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"

                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#000000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/alumniLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/redborder"
                android:text="Logout"
                android:textColor="#DC143C" />

        </LinearLayout>

        <Button
            android:id="@+id/viewProfile"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_light"
            android:drawableLeft="@drawable/profileicon2"
            android:paddingStart="20dp"
            android:text="My Profile"
            android:textColor="#145950"
            android:textSize="20sp" />

        <Button
            android:id="@+id/alumniMessage"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_light"
            android:drawableLeft="@drawable/messageicon"
            android:paddingStart="20dp"
            android:text="Messages"
            android:textColor="#145950"
            android:textSize="20sp" />

        <Button
            android:id="@+id/alumniSupportGroup"
            android:layout_width="350dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/commicon"
            android:paddingStart="10dp"
            android:background="@drawable/rounded_light"
            android:text="Support Group Forums"
            android:textColor="#145950"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>