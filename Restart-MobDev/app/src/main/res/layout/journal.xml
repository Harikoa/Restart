<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@drawable/mobbg"
    tools:context=".Journal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bot_dark"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backDrug"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                app:srcCompat="?attr/actionModeCloseDrawable"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Journal"
                android:gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   Previous Entries"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="480dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/j_entry1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 2"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 3"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 4"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 5"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry6"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 6"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry7"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 7"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry8"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 8"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/j_entry9"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Journal 9"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/CreateJournal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="20dp"
            android:clickable="true"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/compose" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>