<div class="tabContainer">
    <div class="buttonContainer">
        
        <button class="linknavbutton" onclick="showPanel(0, '#')">Connected Patients</button>
        <button class="linknavbutton" onclick="showPanel(1, '#')">Unlinked</button>
    </div>

    <!--Connected Patients-->
    <div class="tabPanel">
        <div class="container-fluid mt-1">
            <div class="row justify-content-center">
                <div class="col-sm-9">
                    <div class="formDesign">
                        <div>
                            <h1><b>Connected Patients</b></h1>
                            <table id="table" class="table">
                                <tr class="connected">
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Contact</th>
                                    <th>Birthday</th>
                                    <th>Nickname</th>
                                    <th>Substance Used</th>
                                    <th>Email</th>
                                    </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="formDesign">
                        <div class="row">
                            <div>
                                <h2><b>Query Patients</b></h2>
                              
                                    <p>First Name <input class="form-control" id="fname0" name = "firstname"></p>
                                    <p>Last Name <input class="form-control" id="lname0" name = "lastname" ></p>
                                    <p><button class="form-control btn btn-outline-success" onclick="search(0)" >Search</button></p>
                             
                            </div>
                        </div>
                    </div>
                </div>

                </div>
            </div>
        </div>

    <!--Master List-->
    <div class="tabPanel">
        <div class="container-fluid mt-1">
            <div class="row justify-content-center">

                <div class="col-sm-9">
                    <div class="formDesign">
                        <div>
                            <h1><b>Unlinked Patients</b></h1>
                            <table id="table" class="table">
                                <tr class="All">
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Contact</th>
                                    <th>Birthday</th>
                                    <th>Nickname</th>
                                    <th>Substance Used</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                    </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="formDesign">
                        <div class="row">
                            <div>
                                <h2><b>Query Patients</b></h2>
                                    <p>First Name <input class="form-control" id="fname1" name = "firstname" required></p>
                                    <p>Last Name <input class="form-control" id="lname1" name = "lastname" required></p>
                                    <p><button class="form-control btn btn-outline-success" onclick="search(1)" >Search</button></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
