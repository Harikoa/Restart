<!--Secondary Navbar-->
<div class="tabContainer"><h2 class="namePatient border text-center border-5 bg-light border-success"><%=locals.whole%></h2>
    <div class="buttonContainer">
        
        <button class="physNav" onclick="showPanel(0, '#')">Journal</button>
        <button class="physNav" onclick="showPanel(1, '#')">Task</button>
        <button class="physNav" onclick="showPanel(2, '#')">Patient's Support Group</button>
        <button class="physNav" onclick="showPanel(3, '#')">Drug Test</button>
        <button class="physNav" onclick="showPanel(4, '#')">Visualized Data</button>
