<!--Secondary Navbar-->
<div class="tabContainer"><h3 class="namePatient border text-center border-3 bg-light border-success">PATIENT</h3>
    <div class="buttonContainer">
        <button class="fiveTabs" onclick="showPanel(0, '#')">Create Patient Account</button>
        <button class="fiveTabs" onclick="showPanel(1, '#')">Edit Patient Account</button>
        <button class="fiveTabs" onclick="showPanel(2, '#')">Delete Patient Account</button>
        <button class="fiveTabs" onclick="showPanel(3, '#')">Suspend Patient Account</button>
        <button class="fiveTabs" onclick="showPanel(4, '#')">Deactivation Requests</button>
    </div>

    <!--Create Account-->
    <div class="tabPanel">
        
        <div class="container mt-3">
            <div class="row justify-content-center">
                <h4><%=locals.msg%></h4>
                <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6">
                    <div class="formDesign">
                        <div>
                           
                        <h3><b>Create Patient Account</b></h3>
                        <form class="form-group formAlign" method="post" action="/admin/create?role=patient">
                        <p>Email <input class="form-control" id="email" name = "email" required type="email"></p>
                        <p>First Name <input class="form-control" id="fname" name = "firstname" required></p>
                        <p>Last Name <input class="form-control" id="lname" name = "lastname" required></p>
                        <p>Middle Name <input class="form-control" id="mname" name = "middlename" required></p>
                        <p>Contact <input class="form-control" type="text" minlength="11" maxlength="11" id="contact" name = "contact" required></p>
                        <p>Nickname <input class="form-control" name ="nickname" required type="text"> </p>
                        <p>Password <input class="form-control" minlength="6" required name ="pw" type="password"> </p>
                        <p>Sex:  <input name ="sex" type="radio" value="male" checked> Male
                             <input  name ="sex" type="radio" value="female"> Female </p>
                        <p>Birthday <input class="form-control" required name ="bday" type="date"> </p>
                        <p>Substance Used: <input class="form-control" name ="substance" required type="text"> </p>
                        <p><button class="form-control btn btn-success" type="submit">Submit</button></p>
                        </form>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Edit Account-->
    <div class="tabPanel">
        <div class="container-fluid mt-3">
            <div class="row justify-content-center">
    
                <div class="col-sm-9 ">
                <div class="formDesign tableScroll">
                    <div>
                        <h1><b>List of Patients</b></h1>
                        <table id="tableEdit" class="table">
                        <tr class="tableRow">
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Middle Name</th>
                        <th>Contact</th>
                        <th>Birthday</th>
                        <th>Nickname</th>
                        <th>Substance Used</th>
                        <th>Email</th>
                        </tr>
                        </table>
                    </div>
                </div>
                </div>
    
                    <div class="col-sm-3">
                        <div class="formDesign">
                        <div class="row">
    
                            <div>
                                <h2><b>Query Patients</b></h2>     
                                    <p>First Name <input class="form-control" id="fname0" name = "firstname" required></p>
                                    <p>Last Name <input class="form-control" id="lname0" name = "lastname" required></p>
                                    <p><button class="form-control btn btn-outline-success" onclick="search(0)" >Search</button></p>
                            </div>
                        </div>
                        </div>
    
    
                    <div class="col-sm-12">
                    <div class="formDesign">
                            <div>
                                <h2><b>Edit Patient Account</b></h2>
                                <form class="form-group formAlign" method="post" action="/admin/edit">
                                    <p>Email <input class="form-control" id="Editemail" name = "email" readonly type="email" required></p>
                                    <p>First Name <input class="form-control" id="Editfname" name = "firstName" required></p>
                                    <p>Last Name <input class="form-control" id="Editlname" name = "lastName" required></p>
                                    <p>Middle Name <input class="form-control" id="Editmname" name = "middleName" required></p>
                                    <p>Contact <input class="form-control" id="Editcontact" minlength="11" maxlength="11" name = "contact" required></p>
                                    <p>Nickname <input class="form-control" id = 'Editnickname'name ="nickname" required type="text"> </p>
                                    <p>Birthday <input class="form-control" id="Editbday" required name ="birthDay" type="date"> </p>
                                    <p>Substance Used: <input class="form-control" id="Editsubstance" name ="substanceUsed" required type="text"> </p>
                                    <p><button class="form-control btn btn-success" type="submit">Submit</button></p>
                                </form>
                            </div>
                    </div>
                    </div>
                    </div>
    
            </div>
        </div>
    </div>

    <!--Delete Account-->
    <div class="tabPanel">
        <div class="container-fluid mt-3">
            <div class="row justify-content-center">
    
                <div class="col-sm-9">
                <div class="formDesign tableScroll">
                    <div>
                        <h1><b>List of Patients</b></h1>
                        <table id="table" class="table">
                        <tr class="tableRow">
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Middle Name</th>
                        <th>Nickname</th>
                        <th>Email</th>
                        <th>Activated</th>
                        </tr>
                        </table>
                    </div>
                </div>
                </div>

                <div class="col-sm-3">
                    <div class="formDesign">
                    <div class="row">

                        <div>
                            <h2>Query Patients</h2>
                     
                                <p>First Name <input class="form-control" id="fname1" name = "firstname" required></p>
                                <p>Last Name <input class="form-control" id="lname1" name = "lastname" required></p>
                                <p><button class="form-control btn btn-outline-success" onclick="search(1)">Search</button></p>
                       
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Suspend Account-->
    <div class="tabPanel">
        <div class="container-fluid mt-3">
            <div class="row justify-content-center">
    
                <div class="col-sm-9">
                <div class="formDesign tableScroll">
                    <div>
                        <h1><b>List of Patients</b></h1>
                        <table id="table" class="table suspend">
                            <tr class="tableRow">
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Middle Name</th>
                        <th>Nickname</th>
                        <th>Email</th>
                        <th>Suspended Till</th>
                        </tr>
                        </table>
                    </div>
                </div>
                </div>

                <div class="col-sm-3">
                    <div class="formDesign">
                    <div class="row">

                        <div>
                            <h2>Query Patients</h2>
                            
                                <p>First Name <input class="form-control" id="fname2" name = "firstname" required></p>
                                <p>Last Name <input class="form-control" id="lname2" name = "lastname" required></p>
                                <p><button class="form-control btn btn-outline-success" onclick="search(2)">Search</button></p>
                        
                        </div>
                    </div>
                    </div>

                    <div class="col-sm">
                        <div class="formDesign">
                                <div>
                                    <h2>Suspend Patient Account</h2>
                                    <form class="form-group formAlign" method="post" action="/admin/suspend">
                                        <p>Email <input class="form-control" readonly id="Suspendemail" name = "email" required type="email"></p>
                                        <p>Suspend until <input class="form-control" required name ="suspend" type="date"> </p>
                                        <p><button class="form-control btn btn-success" type="submit">Suspend</button></p>
                                    </form>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Deactivation Request-->
    <div class="tabPanel">
        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="rowDesign">
                        <h1><b>Deactivation Requests</b></h1>
                    </div>
                </div>
                
                <!--Repeat-->
                <div class="col-10 deacRepeat">
                  
                </div>

            </div>
        </div>
    </div>

