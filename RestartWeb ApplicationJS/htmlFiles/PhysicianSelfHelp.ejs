    <!--Secondary Navbar-->
<div class="tabContainer">
    <div class="buttonContainer">
        
        <button class="linknavbutton" onclick="showPanel(0, '#')">Motivational Quote</button>
        <button class="linknavbutton" onclick="showPanel(1, '#')">Suggested Activities</button>
    </div>

    <!--Motivational Quote-->
    <div class="tabPanel">
        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="formDesign">
                    <div class="col-sm-12">
                        <h2><b>Add new Motivational Quote</b></h2>
                        
                            <form class="form-group formAlign" method="post" action="/phy/newQuote">
                                <h4><b>Author</b><input class="form-control" name="author" required></h4>
                                <h4><b>Quote</b><textarea class="taskDescription" name="body" required rows="8"></textarea></h4>
                                <p><button class="btn btn-outline-success" type="submit">Submit</button></p>
                            </form>
                        
                    </div>
                </div>
                <div class="formDesign">
                    <div class="col-sm-12">
                        <div>
                            <h2><b>Motivational Quotes</b></h2>
                            <table id="tableEdit" class="table">
                            <tr class="tableRow motivQuote">
                            <th>Author</th>
                            <th>Quote</th>
                            <th>Action</th>
                            </tr>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--Suggested Activitiews-->
    <div class="tabPanel">
        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="formDesign">
                    <div class="col-sm-12">
                        <h2><b>Add new Suggested Activity</b></h2>
                        
                            <form class="form-group formAlign" method="post" action="/phy/addActivity">
                                <h4><b>Activity</b><input class="form-control" name="activityTitle" required></h4>
                                <h4><b>Venue</b><input class="form-control" name="venue" required></h4>

                                <h4><b>Choose Weather:
                                <div class="search_select_box">
                                    <select name="weather" class="form-control" data-live-search="true">
                                        <option>Thunderstorm</option>
                                        <option>Drizzle</option>
                                        <option>Rain</option>
                                        <option>Clear</option>
                                        <option>Clouds</option>
                                        <option>Snow</option>
                                    </select>
                                </div></b></h4>
                                <p><button class="btn btn-outline-success" type="submit">Submit</button></p>
                            </form>
                        
                    </div>
                </div>
                <div class="formDesign">
                    <div class="col-sm-12">
                        <div>
                            <h2><b>Suggested Activities</b></h2>
                            <table id="tableEdit" class="table">
                            <tr class="tableRow act">
                            <th>Activity</th>
                            <th>Venue</th>
                            <th>Weather</th>
                            <th>Action</th>
                            </tr>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

